{
  "mcp": {
    "snowflake": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "--python", "3.12",
        "mcp_snowflake_server",
        "--account", "${SNOWFLAKE_ACCOUNT}",
        "--warehouse", "${SNOWFLAKE_WAREHOUSE}",
        "--user", "${SNOWFLAKE_USER}",
        "--password", "${SNOWFLAKE_PASSWORD}",
        "--role", "${SNOWFLAKE_ROLE}"
      ]
    }
  }
}
