{
  "$schema": "https://charm.land/crush.json",
  "permissions": {
    "allowed_tools": [
      "view",
      "ls", 
      "grep",
      "edit",
      "motherduck_query"
    ]
  },
  "options": {
    "context_paths": ["VICTORIA.md"],
    "tui": { "compact_mode": true }
  },
  "mcp": {
    "motherduck": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "mcp-server-motherduck",
        "--db-path",
        "${VICTORIA_HOME}/adtech.duckdb"
      ]
    }
  }
}
