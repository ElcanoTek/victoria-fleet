{
  "$schema": "https://charm.land/crush.json",
  "permissions": {
    "allowed_tools": [
      "view",
      "ls",
      "grep",
      "cat",
      "head",
      "rg",
      "q",
      "awk"
    ]
  },
  "options": {
    "context_paths": [
      "VICTORIA.md"
    ]
  },
  "mcp": {
    "motherduck": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "mcp-server-motherduck",
        "--db-path",
        "data/",
        "--read-only"
      ]
    },
    "snowflake": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "--python=3.12",
        "mcp_snowflake_server",
        "--account",
        "$(echo $SNOWFLAKE_ACCOUNT)",
        "--warehouse",
        "$(echo $SNOWFLAKE_WAREHOUSE)",
        "--user",
        "$(echo $SNOWFLAKE_USER)",
        "--password",
        "$(echo $SNOWFLAKE_PASSWORD)",
        "--role",
        "$(echo $SNOWFLAKE_ROLE)"
      ]
    }
  }
}

